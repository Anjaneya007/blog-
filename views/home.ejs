
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  post.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post.title%>">Read More</a>
    </p>


    <% }) %>

    <form action="/compose" >
      <button type="submit" class="btn btn-success compose btn-lg">Add a Blog</button>
    </form>

    <form action="/delete" >
      <button type="submit" class="btn btn-danger compose btn-lg">Delete a Blog</button>
    </form>


<%- include("partials/footer"); -%>
